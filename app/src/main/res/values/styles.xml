<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="titleMarginTop">0dp</item>
        <item name="android:textColor">@color/poor_white</item>
    </style>

    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/poor_white</item>
    </style>


    <style name="IncomingCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="OutgoingCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="signUpStyleInLogin" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">60dp</item>
        <item name="cornerSizeTopRight">60dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="roundedButton" parent="">
        <item name="borderRound">60dp</item>
    </style>

    <style name="helperTextAppearance" parent="">
        <item name="fontFamily">@font/montserrat_sb</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="navItemAppearance" parent="">
        <item name="fontFamily">@font/montserrat_sb</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="prefixAppearance" parent="">

    </style>

    <style name="registerCardStyle" parent="">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/poor_white</item>
    </style>

    <style name="themeButtonStyle" parent="">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconSize">18dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="languageButtonStyle" parent="">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/theme_btn_selector</item>
    </style>

    <style name="CustomPopUpStyle" parent="">
        <item name="android:popupBackground">@drawable/menu_shape</item>
    </style>


    <style name="phoneCardStyle" parent="">
        <item name="cardBackgroundColor">@color/poor_white</item>
        <item name="cardElevation">5dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">70dp</item>
    </style>

    <style name="countryCodeCardStyle" parent="">
        <item name="cardBackgroundColor">@color/poor_white</item>
        <item name="cardElevation">5dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">70dp</item>
    </style>

    <style name="nextButtonStyle" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">?appColor</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/poor_white</item>
        <item name="icon">@drawable/ic_countries_next</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginEnd">70dp</item>
    </style>

    <style name="countryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeWidth">0dp</item>
        <item name="singleLine">true</item>
        <item name="android:maxLength">25</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/poor_black</item>
        <item name="backgroundTint">@color/poor_white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="icon">@drawable/ic_countries_next</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey_85</item>
    </style>

    <style name="headerStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cardBackgroundColor">@color/poor_white</item>
    </style>

    <style name="toolbarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">?appColor</item>
        <item name="backgroundTint">?appColor</item>
        <item name="icon">@drawable/ic_countries_next</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/poor_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="directDialogStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    
    <style name="customBottomSheep" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/directDialogStyle</item>
    </style>

    <style name="customBottomSheepDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customBottomSheep</item>
    </style>

</resources>