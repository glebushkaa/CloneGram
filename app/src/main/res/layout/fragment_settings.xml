<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_white"
    tools:context=".ui.message.fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:orientation="vertical"
        android:background="@color/background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/background_white"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toolbarCard"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="?appColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bBack"
                    style="@style/toolbarButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:rotation="180" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/userInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarCard">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bChangePhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    android:background="@color/background_white"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile_circle">

                </androidx.appcompat.widget.AppCompatImageButton>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:backgroundTint="?appColor"
                        android:maxLength="15"
                        android:textColor="@color/poor_black"
                        android:textCursorDrawable="@drawable/shape_cursor_login"
                        android:textSize="16sp"
                        tools:text="gle.bushkaa"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/poor_black"
                        android:textSize="14sp"
                        tools:text="+380988010071">

                    </androidx.appcompat.widget.AppCompatTextView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bChangeUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_check_flag"
                    app:backgroundTint="?appColor"
                    app:elevation="5dp"
                    app:fabCustomSize="28dp"
                    app:maxImageSize="12dp"
                    app:tint="@color/white"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/bioContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/background_white"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userInfoContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Bio:"
                    android:textColor="@color/poor_black"
                    android:textSize="16sp"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etBio"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.8"
                    android:background="@android:color/transparent"
                    android:maxLength="120"
                    android:textColor="@color/poor_black"
                    android:textCursorDrawable="@drawable/shape_cursor_login"
                    android:textSize="16sp"
                    tools:text="The merge then was difficult because one contributor had changed many things and corrected the indentation in many places."/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bChangeBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/ic_check_flag"
                    app:backgroundTint="?appColor"
                    app:elevation="5dp"
                    app:fabCustomSize="28dp"
                    app:maxImageSize="12dp"
                    app:tint="@color/poor_white"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                android:id="@+id/changerThemeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                layout="@layout/theme_change_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bioContainer" />

            <include
                android:id="@+id/changeLanguageItem"
                layout="@layout/change_language_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/changerThemeContainer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bSignOut"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|start"
                android:backgroundTint="@color/sign_out_grey"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/sign_out"
                android:textAllCaps="false"
                android:textColor="@color/poor_black"
                android:textSize="12sp"
                app:cornerRadius="10dp"
                android:letterSpacing="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bDelete"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|start"
                app:cornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:gravity="center"
                android:backgroundTint="@color/app_color_red"
                android:layout_marginStart="20dp"
                android:text="@string/delete_account"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:letterSpacing="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bSignOut"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bAskQuestion"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@color/background_white"
                android:fontFamily="@font/montserrat_sb"
                android:gravity="center"
                android:letterSpacing="0"
                android:text="@string/ask_a_question"
                android:textAllCaps="false"
                android:textColor="@color/app_color_blue"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bDelete" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:text="@string/clonegram_version_1_0"
                android:textColor="@color/poor_black"
                android:alpha="0.2"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/bAskQuestion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>